{
  "compilerOptions": {
    "target": "ES2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "noImplicitUseStrict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
