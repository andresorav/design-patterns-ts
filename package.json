{
  "name": "design-patterns-ts",
  "version": "1.0.0",
  "description": "OOP design patterns written in TypeScript",
  "main": "./build/designPatterns.js",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "lint": "./node_modules/.bin/eslint --ext ts ./",
    "watch-all": "rm -rf ./build && tsc-watch --onSuccess 'node --inspect=0.0.0.0:9229 ./build/designPatterns.js'",
    "watch-abstract-factory": "rm -rf ./build && tsc-watch --onSuccess 'node --inspect=0.0.0.0:9229 ./build/abstractFactoryPattern/abstractFactoryPattern.js'",
    "watch-adapter": "rm -rf ./build && tsc-watch --onSuccess 'node --inspect=0.0.0.0:9229 ./build/adapterPattern/adapterPattern.js'",
    "watch-bridge": "rm -rf ./build && tsc-watch --onSuccess 'node --inspect=0.0.0.0:9229 ./build/bridgePattern/bridgePattern.js'",
    "watch-command": "rm -rf ./build && tsc-watch --onSuccess 'node --inspect=0.0.0.0:9229 ./build/commandPattern/commandPattern.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresorav/design-patterns-ts.git"
  },
  "author": "Andres Orav",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andresorav/design-patterns-ts/issues"
  },
  "homepage": "https://github.com/andresorav/design-patterns-ts#readme",
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.16.0",
    "tsc-watch": "^2.4.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "print-message": "^3.0.1",
    "ts-node": "^8.3.0"
  }
}
